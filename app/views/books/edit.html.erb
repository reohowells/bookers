<h1>Eding book</h1>

<p id="notice"><%= notice %></p>

	<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>



<br><%= link_to "Show",book_path(@book) %> | <%= link_to "Back",books_path %></br>

<% if @book.errors.any? %>
    <h4><%= @book.errors.count %>errors prohibited this book from being saved:<h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>