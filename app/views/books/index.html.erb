<h1>Books</h1>

<h2>New book</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
  	<% @books.each do |book| %>
  	<h3 class="book-text-headline">
	<tr>
		<td><%= link_to book.title, book_path(book) %></td>
		<td><%= book.body %></td>
    <td><%= link_to "Show",book_path(book) %></td>
    <td><%= link_to "Edit",edit_book_path(book) %></td>
		<td><%= link_to "Destory",book_path(book),method: :delete %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>



